<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FireQ_1_1.View"
             xmlns:p="clr-namespace:FireQ_1_1.Properties" x:Class="FireQ_1_1.View.LocalizationView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="{x:Static p:Resources.localization}" HorizontalAlignment="Left" Margin="331,23,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Command="{Binding Save}" Content="{x:Static p:Resources.save}" Background="Green" HorizontalAlignment="Left" Margin="186,332,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Command="{Binding Close}" Content="{x:Static p:Resources.close}" Background="Red" HorizontalAlignment="Left" Margin="537,332,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox ItemsSource="{Binding List}" SelectedItem="{Binding SelectedItem}" HorizontalAlignment="Left" Margin="186,134,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</UserControl>
